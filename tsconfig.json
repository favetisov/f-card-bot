{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "allowUnreachableCode": false,
      "declaration": false,
      "experimentalDecorators": true,
      "lib": ["dom", "es2019"],
      "moduleResolution": "node",
      "module": "commonjs",
      "target": "es5",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "jsx": "react",
      "jsxFactory": "h",
      "baseUrl": "src",
      "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }