{
      "compilerOptions": {
        "charset": "utf8",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2018",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
          "@src/*": ["./src/*"]
        },
        "noImplicitAny": false,
        "removeComments": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "esModuleInterop": false,
        "outDir": "dist",
        "noImplicitReturns": true
    },
    "include": [
      "src"
    ],
    "exclude": ["node_modules", "**/*.test.ts"]
  }
